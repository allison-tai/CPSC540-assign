function [yOdds] = marginalCK(p0,pT)
% Chapham Kolmogov

nNodes = size(pT,3)+1;
n=1000;
% Initial value of states to try
yOdds = zeros(nNodes,1);
y = (rand(n,1)>p0(1)); % if rand greater than chance its 0

yOdds(1)=mean(y);

maxProb = -inf;
for i=1:nNodes-1
    % Evaluate this sequence of states
    y = rand(n,1)>pT(y+1,1,i);
    yOdds(i+1) = mean(y);
end
end